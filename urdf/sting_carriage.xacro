<robot
    xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:macro name="sting_carriage" params="base_link payload:=payload">
        <joint
            name="carriage_base_joint"
            type="fixed">
            <parent
                link="${base_link}" />
            <child
                link="carriage_base" />
        </joint>
        <link
            name="carriage_base">
            <inertial>
                <origin
                    xyz="0.168470001541672 3.81834085849686E-06 -0.00990038826765847"
                    rpy="0 0 0" />
                <mass
                    value="0.695201759420563" />
                <inertia
                    ixx="0.000521513476559902"
                    ixy="4.69872062195191E-07"
                    ixz="0.00051877667389809"
                    iyy="0.0292099358589963"
                    iyz="-3.00386636426339E-08"
                    izz="0.0294377821647163" />
            </inertial>
            <visual>
                <origin
                    xyz="0 0 0"
                    rpy="0 0 0" />
                <geometry>
                    <mesh
                        filename="package://sting_carriage_description/meshes/carriage_base.STL" />
                </geometry>
                <material
                    name="">
                    <color
                        rgba="1 1 1 1" />
                </material>
            </visual>
            <collision>
                <origin
                    xyz="0 0 0"
                    rpy="0 0 0" />
                <geometry>
                    <mesh
                        filename="package://sting_carriage_description/meshes/carriage_base_collision.STL" />
                </geometry>
            </collision>
        </link>
        <link
            name="carriage_slider">
            <inertial>
                <origin
                    xyz="0.000156693213846128 -0.0618128630425793 -0.00323427667463495"
                    rpy="0 0 0" />
                <mass
                    value="0.112932852597131" />
                <inertia
                    ixx="0.000168948390924987"
                    ixy="1.21595914488396E-08"
                    ixz="-8.88631626187852E-08"
                    iyy="0.000168996514994476"
                    iyz="6.33431160386277E-07"
                    izz="0.000329383199257969" />
            </inertial>
            <visual>
                <origin
                    xyz="0 0 0"
                    rpy="0 0 0" />
                <geometry>
                    <mesh
                        filename="package://sting_carriage_description/meshes/carriage_slider.STL" />
                </geometry>
                <material
                    name="">
                    <color
                        rgba="1 1 1 1" />
                </material>
            </visual>
            <collision>
                <origin
                    xyz="0 0 0"
                    rpy="0 0 0" />
                <geometry>
                    <mesh
                        filename="package://sting_carriage_description/meshes/carriage_slider_collision.STL" />
                </geometry>
            </collision>
        </link>
        <joint
            name="slider_joint"
            type="prismatic">
            <origin
                xyz="0.00600000000000045 0 0.0123000000000001"
                rpy="-2.61195978578554E-14 1.20485688601907E-14 1.57079632679491" />
            <parent
                link="carriage_base" />
            <child
                link="carriage_slider" />
            <axis
                xyz="0 -1 0" />
            <limit
                lower="0"
                upper="0.367"
                effort="1.1"
                velocity="0.2" />
        </joint>
        <link name="${payload}" />
        <joint
            name="payload_joint"
            type="fixed">
            <origin
                xyz="0.0430500000000003 -0.0625000000000459 0.00300000000000002"
                rpy="3.15544362088405E-30 -7.26931742313452E-18 7.23883640127473E-17" />
            <parent
                link="carriage_slider" />
            <child
                link="${payload}" />
            <axis
                xyz="0 0 0" />
        </joint>
    </xacro:macro>
</robot>